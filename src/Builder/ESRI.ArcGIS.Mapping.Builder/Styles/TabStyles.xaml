                                        <GradientStop Color="#5902026E" Offset="0.791"/>
                                        <GradientStop Color="#000000FF"/>
                                        <GradientStop Color="#1E1313C4" Offset="0.152"/>
                                        <GradientStop Color="#1F010185" Offset="0.725"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
