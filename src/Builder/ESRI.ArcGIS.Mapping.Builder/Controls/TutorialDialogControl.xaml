        <Layout:RTLHelper x:Key="RTLHelper" />
        <mapping:InvertNullableBoolToVisibilityConverter x:Key="InvertNullableBoolToVisibilityConverter" />
        <mapping:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <Style x:Key="GlassyBorder" TargetType="Border">
            <Setter Property="Background"
              Value="{StaticResource MapCenterBackgroundGradientBrush}" />
            <Setter Property="BorderBrush"
              Value="{StaticResource MapCenterBackgroundGradientBrush}" />
            <Setter Property="BorderThickness"
              Value="3" />
            <Setter Property="CornerRadius"
              Value="3" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                            Direction="-45"
                            BlurRadius="20"
                            Opacity=".75"/>
                </Setter.Value>
            </Setter>
        </Style>
