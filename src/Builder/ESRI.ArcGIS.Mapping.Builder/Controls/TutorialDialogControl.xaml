                                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           MaxWidth="260"/>

                        </Grid>
                        <ToolTipService.ToolTip>
                            <ToolTip FlowDirection="{Binding Source={StaticResource RTLHelper}, Path=FlowDirection}"
