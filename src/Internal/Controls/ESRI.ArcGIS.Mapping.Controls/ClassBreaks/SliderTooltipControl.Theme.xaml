<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ESRI.ArcGIS.Mapping.Controls">
    <Style  TargetType="local:SliderTooltipControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SliderTooltipControl">
                    <StackPanel>
                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Background="Transparent">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="30" ShadowDepth="15" Opacity=".75" Direction="300" />
                            </Border.Effect>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="3">
                                <TextBlock Margin="4" x:Name="ThumbTooltipValueDisplay" FontFamily="Verdana" FontSize="10" VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
